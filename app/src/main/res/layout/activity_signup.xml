<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup"
        android:background="@color/colorPrimaryDark" android:paddingTop="40dp">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="463dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:text="@string/register"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textColor="#fff"
                android:fontFamily="@font/pt_sans_reg" tools:targetApi="lollipop"/>
        <LinearLayout
                android:background="@drawable/background_dark"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp" android:layout_marginTop="15dp"
                android:paddingLeft="2dp">
            <TextView
                    android:text="@string/user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontawesome_awesome" android:textColor="#fff" android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="@string/username"
                    android:textColorHint="#fff"
                    android:fontFamily="@font/pt_sans_reg"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:id="@+id/username_field" android:layout_weight="1" android:textColor="#fff"
                    android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
                android:background="@drawable/background_dark"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp" android:layout_marginTop="20dp">
            <TextView
                    android:text="@string/envelope"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontawesome_awesome"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:textColorHint="#fff"
                    android:fontFamily="@font/pt_sans_reg"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:id="@+id/email_field" android:layout_weight="1" android:textColor="#fff"
                    android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/background_dark"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp" android:layout_marginTop="20dp">
            <TextView
                    android:text="@string/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontawesome_awesome"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:textColorHint="#fff"
                    android:fontFamily="@font/pt_sans_reg"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:id="@+id/password_field" android:layout_weight="1" android:textColor="#fff"
                    android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/background_dark"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp" android:layout_marginTop="20dp">
            <TextView
                    android:text="@string/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontawesome_awesome"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:hint="@string/conpassword"
                    android:textColorHint="#fff"
                    android:fontFamily="@font/pt_sans_reg"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:id="@+id/conpassword_field" android:layout_weight="1" android:textColor="#fff"
                    android:textSize="17sp"/>
        </LinearLayout>
        <CheckBox
                android:text="@string/agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox" android:layout_marginTop="15dp"
                android:checked="false"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/pt_sans_reg"
                tools:targetApi="lollipop"
                android:textColor="#fff"
                android:duplicateParentState="true"/>
        <Button
                android:onClick="register"
                android:text="@string/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:background="@drawable/login_btn" android:textColor="#fff"
                android:fontFamily="@font/pt_sans_reg" android:textSize="15sp" tools:targetApi="jelly_bean"/>
    </LinearLayout>
</RelativeLayout>